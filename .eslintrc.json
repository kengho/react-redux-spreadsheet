{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": "2015",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "comma-dangle": [
      "error",
      {
        "arrays": "only-multiline",
        "objects": "only-multiline",
        "imports": "only-multiline",
        "exports": "only-multiline",
        "functions": "never"
      }
    ],
    "jsx-a11y/no-static-element-interactions": "off",
    "arrow-parens": "off",
    "arrow-body-style": "off",
    "max-len": [
      "error",
      120,
      {
        "ignoreComments": true
      }
    ]
  },
  "extends": "airbnb"
}
